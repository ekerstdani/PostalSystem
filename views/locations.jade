extends layout

block content
  table(class="table table-striped table-hover")
    thead
        tr(class="info")
            th(width="95%") Location
            th(width="5%") Actions
    tbody
      if locations != null
        each loc in locations
          tr
            td #{loc.name}
            td
                if isManager  
                    a(class="btn btn-primary btn-xs", href="/locations/edit/" + loc.name) Edit                  
                    form(action="/locations/delete/" + loc.name, method="post")
                      button(name="delete" value="delete") Delete
                else
                    span(class="label label-primary") Manager Account Needed

  center
    a(href="/locations") Back to Top