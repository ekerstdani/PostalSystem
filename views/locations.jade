extends layout

block content
  div( style="margin-left:20%; margin-right:20%;")
      if message
          div(class="alert alert-dismissible alert-success" id="message")
              button(type="button" class="close" onclick="hideMessage();") &times;
              p(align="center") !{message}


  table(class="table table-striped table-hover")
    thead
        tr(class="info")
            th(width="95%") Location
            th(width="5%") Actions
    tbody
      if locations != null
        each val in locations
          tr
            td #{val.name}
            td
                if (!manager)
                    a(class="btn btn-primary btn-xs", href="/locations/edit/" + val.id) Edit
                    form(action="/locations/delete/" + val.id, method="post")
                      button(name="delete" value="delete") Delete
                else
                    span(class="label label-primary") Manager Account Needed

  center
    a(href="/locations") Back to Top