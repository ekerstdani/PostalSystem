extends layout

block content
  nav(class="navbar navbar-default navbar-fixed-top")
    div(class="container-fluid")
      div(class="navbar-header")
        a(class="navbar-brand" href="/") !{title}

      div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
        ul(class="nav navbar-nav")
          li
            a(href="/mainPage") Home
            
          if(manager)
           li
            a(href="/checkFigure") Check Figure

          
          li
          
           div( class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
            ul(class="nav navbar-nav")
             li(class ="dropdown" class="active")
              a(href"/routes" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false") Routes 
               span(class="caret")
              ul(class="dropdown-menu" role="menu")
               li
                a(href="/routes") Routes
               li
                a(href="/addRoute") Add Routes
               li
                a(href="/editRoute") Edit Route
               li
                a(href="/deleteRoute") Delete Route
           
           
           
            

        form(class="navbar-form navbar-left" role="search")
         div(class="form-group")
          input(class="form-control" placeholder="Search Routes" type="text")
         button(class="btn btn-primary btn-sm" type="submit")
          span(class="glyphicon glyphicon-search" aria-hidden="true")      
          
            
              

        ul(class="nav navbar-nav navbar-right")
        
          if(manager)
            li
              a(href="/signup") Sign Up
          if signedInUser
            

            li
              a(href="/userPage" class="btn-primary" onmouseover="showOptions()" onmouseout="hideOptions()") !{signedInUser} &#x25BC;
              span(id="userOptions" style="display:none; position: absolute;" onmouseover="showOptions()" onmouseout="hideOptions()")
                a(href="/profile?user=" + id class="btn btn-default btn-sm") Account
                a(href="/" class="btn btn-default btn-sm") Logout
           

  script(type='text/javascript').
    function hideMessage() {
      document.getElementById("message").style.display = 'none';
    }
    
    function showOptions() {
      document.getElementById('userOptions').style.display = 'block';
    };
    
    function hideOptions() {
      document.getElementById('userOptions').style.display = 'none';
    };

  br
  br  
  br 
  br
  br
  div(class="well" style="margin-left:15%; margin-right:15%;")
   form.form-horizontal
      fieldset
        legend Add Route
        .form-group
          label.col-lg-2.control-label(for='inputEmail') Route Origin
          .col-lg-10
            input#inputEmail.form-control(type='text', placeholder='Origin')
        .form-group
          label.col-lg-2.control-label(for='inputPassword') Route Destination
          .col-lg-10
            input#inputPassword.form-control(type='password', placeholder='Destination')
            span.help-block
              |What form of transportation were you after
            .checkbox
              label
                input(type='checkbox')
                |  Land
              &nbsp
              label
                input(type='checkbox')
                |  Air
              &nbsp
              label
                input(type='checkbox')
                |  Sea
        .form-group
          label.col-lg-2.control-label(for='textArea') Notes
          .col-lg-10
            textarea#textArea.form-control(rows='3')
            span.help-block
              | A longer block of help text that breaks onto a new line and may extend beyond one line.
        .form-group
          label.col-lg-2.control-label Radios
          .col-lg-10
            .radio
              label
                input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
                |             Option one is this
            .radio
              label
                input#optionsRadios2(type='radio', name='optionsRadios', value='option2')
                |             Option two can be something else
        .form-group
          label.col-lg-2.control-label(for='select') Delivery Times 
          .col-lg-10
            select#select.form-control
              option Standard (2-3 Working days)
              option Over Night (Next Working Day)
              option Same Day (T&C apply)
              option No Rush (Free 2-3 Weeks)
              option Weekend 
            br
            select.form-control(multiple='')
              option 1
              option 2
              option 3
              option 4
              option 5
        .form-group
          .col-lg-10.col-lg-offset-2
            button.btn.btn-default(type='reset') Cancel
            button.btn.btn-primary(type='submit') Submit

  
  