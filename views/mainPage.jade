extends layout

block content
  div( style="margin-left:20%; margin-right:20%;")
      if message
          div(class="alert alert-dismissible alert-success" id="message")
              button(type="button" class="close" onclick="hideMessage();") &times;
              p(align="center") !{message}

  
  center
    img(src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a6/KPS_Consulting_Logo.svg/500px-KPS_Consulting_Logo.svg.png")

  br

  div(class="row search")
    div(class="col-sm-6 col-sm-offset-3")
      form(role="form" action="/search")
        div(class="input-group")
          input(type="text" class="form-control input-sm" placeholder="Search Routes" name="searchTerm" id="searchTerm")
          span(class="input-group-btn")
            button(class="btn btn-primary btn-sm" type="submit")
              span(class="glyphicon glyphicon-search" aria-hidden="true")





