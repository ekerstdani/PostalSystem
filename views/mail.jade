extends layout

block content
  table(class="table table-striped table-hover")
    thead
        tr(class="info")
            th(width="10%") Date
            th(width="20%") Origin Address
            th(width="30%") Destination Address
            th(width="20%") Priority
            th(width="10%") Weight
            th(width="10%") Volume
            th(width="10%") Actions
    tbody
      if mail != null
        each val in mail
          tr
            td !{val.creation_date}
            td !{val.origin_name}
            td !{val.destination_name}
            td !{val.priority}
            td !{val.weight}
            td !{val.volume}
            td
                if (!manager)
                  a(class="btn btn-primary btn-xs", href="/mail/edit/" + val.id) Edit
                  form(action="/mail/delete/" + val.id, method="post")
                    button(name="delete" value="delete") Delete
                else
                  span(class="label label-primary") Manager Account Needed

  center
    a(href="/locations") Back to Top