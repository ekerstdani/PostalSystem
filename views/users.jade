extends layout

block content
  table(class="table table-striped table-hover")
    thead
        tr(class="info")
            th(width="30%") Realname
            th(width="30%") Username        
            th(width="20%") Manager
            th(width="20%") Actions
    tbody
      if users != null
        each user in users
          tr
            td #{user.realname}
            td #{user.username}        
            td #{user.manager}
            td
              if isManager
                  a(class="btn btn-primary btn-xs", href="/users/edit/" + user.uid) Edit
              else
                  span(class="label label-primary") Manager Account Needed
      else
        p There are currently no Users to display
        a(href="/users/signup") Add a new route

  center
    a(href="/users") Back to Top