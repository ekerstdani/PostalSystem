extends layout

block content
  table(class="table table-striped table-hover")
    thead
      tr(class="info")
          th(width="30%") Username
          th(width="40%") RealName
          th(width="20%") Manager
          th(width="10%") Actions
    tbody
      tr
        td !{user.username}
        td !{user.realname}
        td !{user.manager}
        td
            if (user.manager)
                a(class="btn btn-primary btn-xs", href="/users/edit/" + user.uid) Edit
                a(class="btn btn-primary btn-xs", href="/users/delete/" + user.uid) Delete
            else
                span(class="label label-primary") Manager Account Needed
  center
      a(href="/users/edit") Back to Top