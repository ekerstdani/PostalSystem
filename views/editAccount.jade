extends layout

block content
  div( style="margin-left:20%; margin-right:20%;")
      if message
          div(class="alert alert-dismissible alert-success" id="message")
              button(type="button" class="close" onclick="hideMessage();") &times;
              p(align="center") !{message}


  table(class="table table-striped table-hover")

      thead
          tr(class="info")
              th(width="30%") Username
              th(width="30%") RealName
              th(width="20%") Manager
              th(width="5%") Actions

          tr

      tbody
          each val in list
              tr
                  th !{val.username}
                  th !{val.realname}
                  th !{val.manager}
                  th
                      if (manager)
                          a(class="btn btn-primary btn-xs", href="/doEditAccount?uid=" + val.uid) Edit
                          a(class="btn btn-primary btn-xs", href="/doDeleteAccount?uid=" + val.uid) Delete
                      else
                          span(class="label label-primary") Manager Account Needed

  center
      a(href="/editAccount") Back to Top